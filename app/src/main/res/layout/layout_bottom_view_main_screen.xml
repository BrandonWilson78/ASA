<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/colorPrimaryDark"
    android:elevation="@dimen/elevation_button"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingEnd="@dimen/margin_from_wall_8dp"
    android:paddingLeft="@dimen/margin_from_wall_8dp"
    android:paddingRight="@dimen/margin_from_wall_8dp"
    android:paddingStart="@dimen/margin_from_wall_8dp">


    <EditText
        android:id="@+id/edittext_search"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@drawable/layout_edittext_background_white"
        android:drawableLeft="@android:drawable/ic_menu_search"
        android:drawableTint="@color/color_less_transparent_line"
        android:gravity="left"
        android:hint="Search"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@color/color_black"
        android:textColorHint="@color/color_less_transparent_line"
        android:textSize="@dimen/text_size_15sp" />

</LinearLayout>