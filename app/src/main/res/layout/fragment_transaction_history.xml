<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background_shade_gray"
   >


    <TextView
        android:id="@+id/txt_your_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_from_wall_16dp"
        android:layout_marginTop="@dimen/margin_from_wall_8dp"
        android:text="You have not made any Transaction yet!"
        android:textAllCaps="false"
        android:textColor="@color/black_90"
        android:textSize="@dimen/text_size_17sp"
        android:textStyle="bold|italic"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lst_paymer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/image"
        android:layout_below="@+id/txt_your_history"
        android:layout_marginTop="@dimen/margin_from_wall_8dp"
        android:scrollbars="none"
     />

    <android.support.v4.widget.Space
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_from_wall_32dp"
        android:layout_above="@+id/image"
        android:layout_below="@+id/lst_paymer" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/event_banner"
        android:visibility="gone" />
</RelativeLayout>
