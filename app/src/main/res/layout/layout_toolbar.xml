<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
  android:background="@color/colorPrimaryDark"
    android:clipToPadding="true"
    android:minHeight="?attr/actionBarSize"
    app:contentInsetEnd="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetStart="0dp"
    app:elevation="@dimen/elevation_toolbar">


    <ImageView
        android:id="@+id/img_header_setting_left"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="left|center"
        android:elevation="@dimen/elevation_button"
        android:padding="13dp"
        android:src="@mipmap/ic_arrow_back"
        android:visibility="visible" />

    <!--  <ImageView
          android:layout_width="150dp"
          android:layout_height="match_parent"
          android:layout_gravity="center"
          android:layout_marginLeft="@dimen/margin_from_wall_32dp"
          android:layout_marginStart="@dimen/margin_from_wall_32dp"
          android:scaleType="fitCenter"
          android:src="@drawable/awsome_head"
          android:visibility="visible" />-->


    <ImageView
        android:id="@+id/img_header_star_right"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right|center"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:elevation="@dimen/elevation_button"
        android:scaleType="fitXY"
        android:src="@drawable/star"
        android:tint="@color/color_white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_header_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/margin_from_wall_2dp"
        android:drawableRight="@mipmap/ic_arrow_d"
        android:gravity="center|start"
        android:text="Cape Town"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_15sp"
        android:visibility="visible" />


</android.support.v7.widget.Toolbar>

