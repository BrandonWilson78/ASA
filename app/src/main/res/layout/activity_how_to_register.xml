<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/top_linear"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark">

        <za.asa_media.awesome_sa.support.custom_views.AppTextView
            android:id="@+id/textview_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/ic_arrow_back"
            android:onClick="goBackk"
            android:padding="@dimen/margin_from_wall_16dp"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_17sp"
            android:textStyle="bold" />

        <za.asa_media.awesome_sa.support.custom_views.AppTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="How To Register"
            android:textColor="@color/color_white"
            android:textStyle="bold" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/color_white"
            android:elevation="@dimen/margin_from_wall_4dp"
            android:visibility="gone">

            <fragment
                android:id="@+id/place_autocomplete_fragment"
                android:name="za.asa_media.awesome_sa.customizedfragment.CustomizedPlaceFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible" />
        </android.support.v7.widget.CardView>
    </FrameLayout>

    <za.asa_media.awesome_sa.support.custom_views.AppTextView
        android:id="@+id/text_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:lineSpacingExtra="2sp"
        android:padding="@dimen/padding_5"
        android:textColor="@color/color_black"
        android:textSize="@dimen/text_size_17sp"
        android:textStyle="bold" />
</LinearLayout>