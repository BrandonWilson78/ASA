<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background_shade_gray"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_create_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_from_wall_8dp"
            android:layout_marginRight="@dimen/margin_from_wall_8dp"
            android:layout_marginTop="@dimen/margin_from_wall_8dp"
            android:focusable="true"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="@dimen/elevation_button">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_from_wall_16dp"
                android:paddingTop="@dimen/margin_from_wall_16dp">

                <LinearLayout
                    android:id="@+id/linear_create_ads"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clipToPadding="false"
                    android:gravity="center|left"
                    android:onClick="parentListner"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_from_wall_16dp"
                        android:layout_marginStart="@dimen/margin_from_wall_16dp">

                        <ImageView
                            android:id="@+id/img_plus_create_ads"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:clickable="true"
                            android:elevation="@dimen/elevation_button"
                            android:src="@mipmap/ic_plus" />

                        <ImageView
                            android:id="@+id/img_minus_create_ads"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:clickable="true"
                            android:elevation="@dimen/elevation_button"
                            android:src="@mipmap/ic_minus"
                            android:visibility="gone" />
                    </FrameLayout>


                    <TextView
                        android:id="@+id/txt_create_ads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_from_wall_8dp"
                        android:text="Create Ads"
                        android:textColor="@color/black_90"
                        android:textSize="@dimen/text_size_17sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <View
                    android:id="@+id/view_seprator_create_ads"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/margin_from_wall_16dp"
                    android:background="@color/color_white"
                    android:visibility="gone" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_create_ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_from_wall_8dp"
                    android:scrollbars="none"
                    android:visibility="gone"
                    tools:listitem="@layout/layout_item_ad_create" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_ads_under_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_from_wall_8dp"
            android:layout_marginRight="@dimen/margin_from_wall_8dp"
            android:layout_marginTop="@dimen/margin_from_wall_8dp"
            android:focusable="true"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="@dimen/elevation_button">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_from_wall_16dp"
                android:paddingTop="@dimen/margin_from_wall_16dp">

                <LinearLayout
                    android:id="@+id/linear_ads_under_review"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clipToPadding="false"
                    android:gravity="center|left"
                    android:onClick="parentListner"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_from_wall_16dp"
                        android:layout_marginStart="@dimen/margin_from_wall_16dp">

                        <ImageView
                            android:id="@+id/img_plus_ads_under_review"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:clickable="true"
                            android:elevation="@dimen/elevation_button"
                            android:src="@mipmap/ic_plus" />

                        <ImageView
                            android:id="@+id/img_minus_ads_under_review"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:clickable="true"
                            android:elevation="@dimen/elevation_button"
                            android:src="@mipmap/ic_minus"
                            android:visibility="gone" />
                    </FrameLayout>


                    <TextView
                        android:id="@+id/txt_ads_under_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_from_wall_8dp"
                        android:text="Ads Under Reviews"
                        android:textColor="@color/black_90"
                        android:textSize="@dimen/text_size_17sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <View
                    android:id="@+id/view_seprator_ads_under_review"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/margin_from_wall_16dp"
                    android:background="@color/color_white"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_under_review_ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_from_wall_8dp"

                    android:scrollbars="none"
                    android:visibility="gone"
                    tools:listitem="@layout/layout_item_ad_create" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_running_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_from_wall_8dp"
            android:layout_marginRight="@dimen/margin_from_wall_8dp"
            android:layout_marginTop="@dimen/margin_from_wall_8dp"
            android:focusable="true"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="@dimen/elevation_button">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_from_wall_16dp"
                android:paddingTop="@dimen/margin_from_wall_16dp"
                android:weightSum="1">

                <LinearLayout
                    android:id="@+id/linear_running_ads"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clipToPadding="false"
                    android:gravity="center|left"
                    android:onClick="parentListner"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_from_wall_16dp"
                        android:layout_marginStart="@dimen/margin_from_wall_16dp">

                        <ImageView
                            android:id="@+id/img_plus_running_ads"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:clickable="true"
                            android:elevation="@dimen/elevation_button"
                            android:src="@mipmap/ic_plus"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/img_minus_running_ads"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:clickable="true"
                            android:elevation="@dimen/elevation_button"
                            android:src="@mipmap/ic_minus"
                            android:visibility="gone" />
                    </FrameLayout>


                    <TextView
                        android:id="@+id/txt_running_ads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_from_wall_8dp"
                        android:text="Approved Ads"
                        android:textColor="@color/black_90"
                        android:textSize="@dimen/text_size_17sp"
                        android:textStyle="normal" />


                    <!--  <FrameLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginEnd="@dimen/margin_from_wall_16dp"
                          android:layout_marginLeft="@dimen/margin_from_wall_8dp"
                          android:layout_marginRight="@dimen/margin_from_wall_16dp"
                          android:layout_marginStart="@dimen/margin_from_wall_8dp">

                          &lt;!&ndash;  <TextView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="right|center"
                                android:drawableLeft="@drawable/ic_edit"
                                android:text="Edit Ads"
                                android:textColor="@color/black_90"
                                android:textSize="@dimen/text_size_17sp"
                                android:textStyle="normal" />&ndash;&gt;

                          <ImageView
                              android:layout_width="40dp"
                              android:layout_height="40dp"
                              android:layout_gravity="right"
                              android:backgroundTint="@color/colorPrimary"
                              android:clickable="true"
                              android:elevation="@dimen/elevation_button"
                              android:padding="9dp"
                              android:src="@drawable/ic_edit"
                              android:tint="@color/batch_catalogue_color"
                              android:visibility="visible" />
                      </FrameLayout>-->


                </LinearLayout>

                <View
                    android:id="@+id/view_seprator_running_ads"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/margin_from_wall_8dp"
                    android:background="@color/color_white"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/txt_running_ads_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_from_wall_8dp"

                    android:scrollbars="none"
                    android:visibility="gone"
                    tools:listitem="@layout/layout_item_my_ads_all" />


            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_rejected_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_from_wall_8dp"
            android:layout_marginRight="@dimen/margin_from_wall_8dp"
            android:layout_marginTop="@dimen/margin_from_wall_8dp"
            android:focusable="true"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="@dimen/elevation_button">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_from_wall_16dp"
                android:paddingTop="@dimen/margin_from_wall_16dp">

                <LinearLayout
                    android:id="@+id/linear_rejected_ads"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clipToPadding="false"
                    android:gravity="center|left"
                    android:onClick="parentListner"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_from_wall_16dp"
                        android:layout_marginStart="@dimen/margin_from_wall_16dp">

                        <ImageView
                            android:id="@+id/img_plus_rejected_ads"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:clickable="true"
                            android:elevation="@dimen/elevation_button"
                            android:src="@mipmap/ic_plus" />

                        <ImageView
                            android:id="@+id/img_minus_rejected_ads"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:clickable="true"
                            android:elevation="@dimen/elevation_button"
                            android:src="@mipmap/ic_minus"
                            android:visibility="gone" />
                    </FrameLayout>


                    <TextView
                        android:id="@+id/txt_rejected_ads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_from_wall_8dp"
                        android:text="Rejected Ads"
                        android:textColor="@color/black_90"
                        android:textSize="@dimen/text_size_17sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <View
                    android:id="@+id/view_seprator_rejected_ads"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/margin_from_wall_16dp"
                    android:background="@color/color_white"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_rejected_ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_from_wall_8dp"
                    android:scrollbars="none"
                    android:visibility="gone"
                    tools:listitem="@layout/layout_item_ad_create" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_expired_ads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_from_wall_8dp"
            android:layout_marginRight="@dimen/margin_from_wall_8dp"
            android:layout_marginTop="@dimen/margin_from_wall_8dp"
            android:focusable="true"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="@dimen/elevation_button">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin_from_wall_16dp"
                android:paddingTop="@dimen/margin_from_wall_16dp">

                <LinearLayout
                    android:id="@+id/linear_expired_ads"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clipToPadding="false"
                    android:gravity="center|left"
                    android:onClick="parentListner"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_from_wall_16dp"
                        android:layout_marginStart="@dimen/margin_from_wall_16dp">

                        <ImageView
                            android:id="@+id/img_plus_expired_ads"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:clickable="true"
                            android:elevation="@dimen/elevation_button"
                            android:src="@mipmap/ic_plus" />

                        <ImageView
                            android:id="@+id/img_minus_expired_ads"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/colorPrimary"
                            android:clickable="true"
                            android:elevation="@dimen/elevation_button"
                            android:src="@mipmap/ic_minus"
                            android:visibility="gone" />
                    </FrameLayout>


                    <TextView
                        android:id="@+id/txt_expired_ads"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_from_wall_8dp"
                        android:text="Expired Ads"
                        android:textColor="@color/black_90"
                        android:textSize="@dimen/text_size_17sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <View
                    android:id="@+id/view_seprator_expired_ads"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="@dimen/margin_from_wall_16dp"
                    android:background="@color/color_white"
                    android:visibility="gone" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycle_expired_ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_from_wall_8dp"
                    android:scrollbars="none"
                    android:visibility="gone"
                    tools:listitem="@layout/layout_item_ad_create" />

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_from_wall_32dp" />

    </LinearLayout>

</FrameLayout>
