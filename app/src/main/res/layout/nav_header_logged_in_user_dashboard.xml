<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/new_app_blue_color"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_user_header"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:elevation="@dimen/elevation_button"
        android:src="@drawable/drawer_image"
        app:civ_border_color="@color/color_white"
        app:civ_border_width="1sp" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_from_wall_16dp"
        android:layout_toEndOf="@+id/img_user_header"
        android:layout_toRightOf="@+id/img_user_header"
        android:fontFamily="sans-serif"
        android:text="Demo singh"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="@dimen/text_size_15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_email_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_username"
        android:layout_marginLeft="@dimen/margin_from_wall_16dp"
        android:layout_toEndOf="@+id/img_user_header"
        android:layout_toRightOf="@+id/img_user_header"
        android:text="demo@gmail.com"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_13sp" />

</RelativeLayout>
