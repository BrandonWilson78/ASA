<?xml version="1.0" encoding="utf-8"?>
<com.daasuu.bl.BubbleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bubble_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_from_wall_8dp"
    android:fadingEdgeLength="@dimen/margin_from_wall_8dp"
    android:padding="8dp"
    app:bl_arrowDirection="top_center"
    app:bl_arrowHeight="8dp"
    app:bl_arrowPosition="12dp"
    app:bl_arrowWidth="8dp"
    app:bl_bubbleColor="@color/color_background_shade_gray"
    app:bl_cornersRadius="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/btext_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:padding="@dimen/margin_from_wall_8dp"
            android:textSize="@dimen/text_size_15sp"
            android:text="User View"
            android:textColor="@color/color_black" />

        <TextView
            android:id="@+id/btext_business"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:padding="@dimen/margin_from_wall_8dp"
            android:textSize="@dimen/text_size_15sp"
            android:text="Business View"
            android:textColor="@color/color_black" />
    </LinearLayout>


</com.daasuu.bl.BubbleLayout>

